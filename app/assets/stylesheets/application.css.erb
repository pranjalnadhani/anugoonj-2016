body {
  padding-top: 60px;
  background-image: url('<%= asset_path('collage/background.jpg') %>');
  background-repeat: repeat-y;;
  background-size: 100%;
  background-attachment: fixed;
}

.jumbotron {
  opacity: 0.9;
}

.well {
  opacity: 0.96;
}

@font-face {
  font-family: 'Bleeding Cowboys';
  src: url('<%= font_path("bleeding_cowboys.ttf") %>') format('truetype');
  font-weight: normal;
  font-style: normal;
}

